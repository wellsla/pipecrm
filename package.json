    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.2.5",
    "msw": "^2.11.6",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.56.1",
    "prettier": "3.6.2",
